= inside_layout :application do
  = yield

  = content_for :header do
    %section.prerelease-govau--header.home
      .wrapper

        = render 'feedback_link'

        .home-header-content
          .govau--logo.home
            = image_tag 'icons/gov-au-white-2x.png', width: '300', alt: "GOV.AU crest logo"

          .homeintro
            %h1
              %span.is-visuallyhidden
                GOV.AU homepage
            %p
              Your guide to finding Australian Government services and information.
            %p
              Fire it up!
              = image_tag 'https://www.emergencyreporting.com/wp-content/uploads/2015/03/Fire.png', width: '100', alt: "Fire"

  - if node.short_summary
    = content_for :meta_description do
      = node.short_summary

  = content_for :after_header do
    .brandbar.default{class: sunstate_class}
      .b1
      .b2
